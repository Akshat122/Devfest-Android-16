<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    card_view:contentPadding="@dimen/expandable_recycler_padding">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="1">

    <TextView
        android:id="@+id/about_list_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:text="Message"
        android:textColor="@color/textColorSecondary"
        android:textSize="17sp" />

    <ImageView
        android:layout_width="@dimen/expandable_arrow_size"
        android:layout_height="@dimen/expandable_arrow_size"
        android:layout_weight="0.2"
        app:srcCompat="@drawable/ic_arrow_expandable_24dp" />

</LinearLayout>
    </android.support.v7.widget.CardView>