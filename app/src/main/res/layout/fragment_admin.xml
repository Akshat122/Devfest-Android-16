<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:weightSum="10"
    android:layout_height="match_parent">

    <com.dlazaro66.qrcodereaderview.QRCodeReaderView
        android:id="@+id/fragment_admin_qrcodereader_view"
        android:layout_width="match_parent"
        android:layout_weight="8"
        android:layout_height="0dp" />

    <FrameLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp">

        <Button
            android:id="@+id/fragment_admin_btn_qr_start_stop"
            android:text="Start Preview"
            android:padding="10dp"
            android:elevation="7dp"
            android:background="@drawable/button_rect_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical|center|center_horizontal"
            />

        <TextView
            android:id="@+id/fragment_admin_tv_json"
            android:text="Looking for QR Code..."
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:gravity="bottom|center_horizontal"
            android:layout_height="match_parent" />


    </FrameLayout>

</LinearLayout>